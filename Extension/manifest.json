  "permissions": [
    "*://*.raw.githubusercontent.com/*",
    "*://*.api.steampowered.com/*",
    "*://*.store.steampowered.com/*",
    "*://*.script.google.com/*",
    "*://*.script.googleusercontent.com/*",
    "*://*.sgtools.info/*",
    "*://*.steamcommunity.com/*",
    "*://*.steamgifts.com/*",
    "*://*.steamtrades.com/*",
    "*://*.isthereanydeal.com/*",
    "*://*.api.dropboxapi.com/*",
