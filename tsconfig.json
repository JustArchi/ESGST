{
	"exclude": ["./node_modules", "./build", "./dist"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"jsx": "react",
		"jsxFactory": "DOM.element",
		"module": "CommonJS",
		"outDir": "./build",
		"sourceMap": true,
		"target": "ES2020",
		"strict": true,
		"typeRoots": ["./node_modules/@types", "./node_modules/web-ext-types"],
		"resolveJsonModule": true,
		"skipLibCheck": true
	}
}
